<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUpPage"
        android:background="@color/u_preto">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/u_img_descriptions"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/signup" />

        <EditText
            android:id="@+id/edit_email"
            style="@style/EditTextLogin"
            android:layout_marginTop="80dp"
            android:hint="Email:"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.63"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <EditText
            android:id="@+id/edit_phone"
            style="@style/EditTextLogin"
            android:layout_marginTop="30dp"
            android:hint="Telefone:"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_email" />

        <EditText
            android:id="@+id/edit_pass"
            style="@style/EditTextLogin"
            android:layout_marginTop="30dp"
            android:hint="Senha:"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_phone" />


        <Button
            android:id="@+id/btn_salvar"
            style="@style/ButtonLogin"
            android:layout_marginTop="184dp"
            android:text="@string/u_btn_salvar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_phone" />

        <CheckBox
            android:id="@+id/checkBox_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gostaria de receber nossos emails?"
            app:layout_constraintBottom_toTopOf="@+id/btn_salvar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_pass" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>